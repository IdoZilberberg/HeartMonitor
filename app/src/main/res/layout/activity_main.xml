<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_alignParentStart="true"
              android:layout_alignParentTop="true"
              android:orientation="vertical"
              android:showDividers="beginning|middle|end"
              tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/username"
            android:textSize="36sp"
            />

        <ToggleButton
            android:id="@+id/orientationToggleButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:text="New ToggleButton"
            android:textOff="Reverse"
            android:textOn="Normal"
            android:textSize="24sp"
            android:layout_weight="2"/>


    </LinearLayout>

    <TextView
        android:id="@+id/heartRateText"
        style="@style/hrText"
        android:layout_weight="2"
        android:text="@string/heartrate_unknown"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:format12Hour="hh:mma"
            android:format24Hour="HH:mm"
            android:inputType="time"
            android:textSize="48sp"
            />

        <TextView
            android:id="@+id/temperatureText"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="@string/temperature"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="48sp"
            android:typeface="monospace"
            android:visibility="gone"/>

        <View
            android:id="@+id/emptySpace"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

        <ImageView
            android:id="@+id/btConnectedIndicatorImage"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bluetooth_128"
            android:contentDescription="@string/desc_bluetooth_connection"
            />

    </LinearLayout>

    <ToggleButton
        android:id="@+id/loggingToggleButton"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:textOff="Start logging"
        android:textOn="Stop logging"
        android:textSize="32sp"/>

    <ProgressBar
        android:id="@+id/heartRateMemoryDataProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:max="100"
        android:mirrorForRtl="false"/>

</LinearLayout>
